<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.wildfly.swarm.examples</groupId>
    <artifactId>examples-ribbon-parent</artifactId>
    <version>2017.12.0-SNAPSHOT</version>
    <relativePath>../</relativePath>
  </parent>

  <artifactId>example-ribbon-test</artifactId>

  <name>WildFly Swarm Examples: Netflix Ribbon: Multi-service Test </name>
  <description>WildFly Swarm Examples: Netflix Ribbon: Multi-service Test</description>

  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <executions>
          <execution>
            <phase>test-compile</phase>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <id>integration-test</id>
            <phase>integration-test</phase>
          </execution>
          <execution>
            <id>verify</id>
            <phase>verify</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.wildfly.swarm</groupId>
        <artifactId>wildfly-swarm-plugin</artifactId>
        <configuration>
          <properties>
            <swarm.bind.address>127.0.0.1</swarm.bind.address>
            <java.net.preferIPv4Stack>true</java.net.preferIPv4Stack>
          </properties>
        </configuration>
        <executions>
          <execution>
            <id>package</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>start</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>multistart</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>multistart</goal>
            </goals>
            <configuration>
              <processes>
                <process>
                  <artifactId>example-ribbon-frontend</artifactId>
                </process>
                <process>
                  <artifactId>example-ribbon-time</artifactId>
                  <properties>
                    <swarm.port.offset>1</swarm.port.offset>
<!--
                    <swarm.http.port>8081</swarm.http.port>
-->
                  </properties>
                </process>
                <process>
                  <artifactId>example-ribbon-time</artifactId>
                  <properties>
                    <swarm.port.offset>2</swarm.port.offset>
<!--
                    <swarm.http.port>8082</swarm.http.port>
-->
                  </properties>
                </process>
                <process>
                  <artifactId>example-ribbon-events</artifactId>
                  <properties>
                    <swarm.port.offset>3</swarm.port.offset>
<!--
                    <swarm.http.port>8083</swarm.http.port>
-->
                  </properties>
                </process>
              </processes>
            </configuration>
          </execution>
          <execution>
            <id>stop</id>
            <phase>post-integration-test</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.wildfly.swarm.examples</groupId>
      <artifactId>examples-base</artifactId>
    </dependency>
    <dependency>
      <groupId>org.wildfly.swarm.examples</groupId>
      <artifactId>example-ribbon-frontend</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.wildfly.swarm.examples</groupId>
      <artifactId>example-ribbon-time</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.wildfly.swarm.examples</groupId>
      <artifactId>example-ribbon-events</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>

  <modules>
    <module>../frontend</module>
    <module>../events</module>
    <module>../time</module>
  </modules>

</project>
